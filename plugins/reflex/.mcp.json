{
  "mcpServers": {
    "atlassian": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-atlassian"],
      "env": {
        "ATLASSIAN_URL": "${ATLASSIAN_URL}",
        "ATLASSIAN_EMAIL": "${ATLASSIAN_EMAIL}",
        "ATLASSIAN_API_TOKEN": "${ATLASSIAN_API_TOKEN}"
      }
    },
    "git": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-git"]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "microsoft-docs": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "azure": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@azure/azure-mcp@latest"]
    },
    "azure-devops": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@microsoft/mcp-azure-devops@latest"]
    },
    "markitdown": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@microsoft/mcp-markitdown@latest"]
    },
    "sql-server": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@azure/mcp@latest", "server", "start", "--namespace", "sql"]
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@microsoft/mcp-playwright@latest"]
    },
    "devbox": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@microsoft/mcp-devbox@latest"]
    },
    "azure-ai-foundry": {
      "type": "stdio",
      "command": "uvx",
      "args": ["--prerelease=allow", "--from", "git+https://github.com/azure-ai-foundry/mcp-foundry.git", "run-azure-ai-foundry-mcp"]
    },
    "m365-agents": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@microsoft/m365agentstoolkit-mcp@latest", "server", "start"]
    },
    "qdrant": {
      "type": "stdio",
      "command": "uvx",
      "args": ["--python", "3.12", "--with", "fastembed", "mcp-server-qdrant"],
      "env": {
        "QDRANT_URL": "http://localhost:6333",
        "COLLECTION_NAME": "${WORKSPACE_PROFILE:-default}_memories"
      }
    },
    "aws": {
      "type": "http",
      "url": "https://mcp.aws.amazon.com/mcp"
    },
    "kubernetes": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-server-kubernetes"]
    },
    "terraform": {
      "type": "stdio",
      "command": "uvx",
      "args": ["awslabs.terraform-mcp-server@latest"]
    },
    "pulumi": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@pulumi/mcp-server@latest", "stdio"]
    },
    "sentry": {
      "type": "http",
      "url": "https://mcp.sentry.dev/mcp"
    },
    "grafana": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@grafana/mcp-grafana"],
      "env": {
        "GRAFANA_URL": "${GRAFANA_URL}",
        "GRAFANA_API_KEY": "${GRAFANA_API_KEY}"
      }
    },
    "datadog": {
      "type": "http",
      "url": "https://mcp.datadoghq.com/mcp"
    },
    "mongodb": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@mongodb-js/mongodb-mcp-server"],
      "env": {
        "MONGODB_URI": "${MONGODB_URI}"
      }
    },
    "redis": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@redis/mcp-redis"],
      "env": {
        "REDIS_URL": "${REDIS_URL}"
      }
    },
    "elasticsearch": {
      "type": "stdio",
      "command": "uvx",
      "args": ["elasticsearch-mcp-server"],
      "env": {
        "ELASTICSEARCH_HOSTS": "${ELASTICSEARCH_HOSTS}"
      }
    },
    "slack": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}"
      }
    },
    "linear": {
      "type": "http",
      "url": "https://mcp.linear.app"
    },
    "notion": {
      "type": "http",
      "url": "https://mcp.notion.com/mcp"
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "ffmpeg": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "video-audio-mcp"]
    },
    "yt-dlp": {
      "type": "stdio",
      "command": "uvx",
      "args": ["yt-dlp-mcp"]
    },
    "youtube-transcribe": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "youtube-transcribe-mcp"]
    }
  }
}
