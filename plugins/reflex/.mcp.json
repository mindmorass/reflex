{
  "mcpServers": {
    "qdrant": {
      "command": "uvx",
      "args": ["--python", "3.12", "--with", "fastembed", "mcp-server-qdrant==0.8.1"],
      "env": {
        "QDRANT_URL": "http://localhost:6333",
        "COLLECTION_NAME": "${WORKSPACE_PROFILE:-default}_memories"
      }
    },
    "atlassian": {
      "command": "uvx",
      "args": ["--python", "3.12", "mcp-atlassian==0.13.0"],
      "env": {
        "JIRA_URL": "${JIRA_URL}",
        "JIRA_USERNAME": "${JIRA_USERNAME}",
        "JIRA_API_TOKEN": "${JIRA_API_TOKEN}",
        "CONFLUENCE_URL": "${CONFLUENCE_URL}",
        "CONFLUENCE_USERNAME": "${CONFLUENCE_USERNAME}",
        "CONFLUENCE_API_TOKEN": "${CONFLUENCE_API_TOKEN}"
      }
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git==2025.12.18", "--repository", "."],
      "env": {}
    },
    "github": {
      "command": "docker",
      "args": [
        "run", "-i", "--rm",
        "-e", "GITHUB_PERSONAL_ACCESS_TOKEN",
        "-e", "GITHUB_TOOLSETS",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_TOOLSETS": "repos,issues,pull_requests,code_security"
      }
    },
    "microsoft-docs": {
      "command": "npx",
      "args": ["-y", "mcp-remote@0.1.37", "https://mcp.microsoft-learn.com/api/mcp/sse"]
    },
    "azure": {
      "command": "npx",
      "args": ["-y", "@azure/mcp@2.0.0-beta.10", "server", "start"],
      "env": {
        "AZURE_SUBSCRIPTION_ID": "${AZURE_SUBSCRIPTION_ID}",
        "AZURE_TENANT_ID": "${AZURE_TENANT_ID}",
        "AZURE_CLIENT_ID": "${AZURE_CLIENT_ID}",
        "AZURE_CLIENT_SECRET": "${AZURE_CLIENT_SECRET}"
      }
    },
    "azure-devops": {
      "command": "npx",
      "args": ["-y", "@azure-devops/mcp@2.2.2"],
      "env": {
        "AZURE_DEVOPS_ORG_URL": "https://dev.azure.com/${AZURE_DEVOPS_ORG}",
        "AZURE_DEVOPS_PAT": "${AZURE_DEVOPS_PAT}"
      }
    },
    "markitdown": {
      "command": "npx",
      "args": ["-y", "mcp-remote@0.1.37", "http://127.0.0.1:3001/mcp/"]
    },
    "sql-server": {
      "command": "npx",
      "args": ["-y", "mssql-mcp@2.1.1"],
      "env": {
        "MSSQL_CONNECTION_STRING": "${MSSQL_CONNECTION_STRING}"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@0.0.55"],
      "env": {}
    },
    "devbox": {
      "command": "npx",
      "args": ["-y", "@microsoft/devbox-mcp@0.0.3-alpha.4"],
      "env": {
        "AZURE_SUBSCRIPTION_ID": "${AZURE_SUBSCRIPTION_ID}",
        "AZURE_TENANT_ID": "${AZURE_TENANT_ID}"
      }
    },
    "azure-ai-foundry": {
      "command": "npx",
      "args": ["-y", "mcp-remote@0.1.37", "https://mcp.ai.azure.com"],
      "env": {
        "AZURE_TENANT_ID": "${AZURE_TENANT_ID}"
      }
    },
    "kubernetes": {
      "command": "npx",
      "args": ["-y", "kubernetes-mcp-server@0.0.56", "--disable-destructive"],
      "env": {
        "KUBECONFIG": "${KUBECONFIG:-~/.kube/config}"
      }
    },
    "google-workspace": {
      "command": "uvx",
      "args": ["--python", "3.12", "workspace-mcp==1.7.1", "--tool-tier", "core"],
      "env": {
        "GOOGLE_OAUTH_CLIENT_ID": "${GOOGLE_OAUTH_CLIENT_ID}",
        "GOOGLE_OAUTH_CLIENT_SECRET": "${GOOGLE_OAUTH_CLIENT_SECRET}",
        "USER_GOOGLE_EMAIL": "${USER_GOOGLE_EMAIL}"
      }
    }
  }
}
